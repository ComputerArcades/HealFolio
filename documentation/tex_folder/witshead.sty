\def\affiliation#1{\gdef\@affiliation{#1}}

\RequirePackage{graphicx}
\newcommand{\makewitshead}[1]{{\bfseries
\vspace*{-18mm}
\newlength{\mmlen}
\setlength{\mmlen}{\textwidth}
\addtolength{\mmlen}{-1cm}
\hspace*{-1cm}
\begin{tabular}{l l}
\unitlength=1mm
\begin{picture}(5,0)
\put(0,0){\makebox(0,0){\includegraphics[scale=0.25]{Crest}}}
\end{picture}
&
\parbox[t][1cm]{20cm}%
{\shortstack[l]{{\large\sc University of the Witwatersrand,
Johannesburg}\\
\rule{\mmlen}{0.5pt}\\{#1}}}\\
\end{tabular}
  \vskip 18\p@
  \begin{center}%
    {\Large \@title \par}%
    \vskip 1.5em%
    \mdseries%
    {\large
     \lineskip .75em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
      \vskip 1.5em%
    {\large \@date \par}%       % Set date in \large size.
  \end{center}\par
}}


